<div style="padding: 20px">
    <div class="text-center">
        <h3> Promotion: {{promotion.name}} </h3>
    </div>

    <div class="card mt-5">
        <div class="card-header">
            Promotional details
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6"> <span class="inline-block"> <h5> Promo Code: </h5> </span> {{promotion.promo_code}} </div>
                <div class="col-md-6"> <span class="inline-block"> <h5> Visibility to public: </h5> </span>
                    {{#if promotion.visibility}} Yes {{else}} No {{/if}}
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-6"> <span class="inline-block"> <h5> Start date: </h5> </span> {{promotion.start_date}} </div>
                <div class="col-md-6"> <span class="inline-block"> <h5> End date: </h5> </span> {{promotion.end_date}} </div>
            </div>

            <div class="row mt-3">
                <h5 class="card-title col-md-12">Description:</h5>
                <p class="card-text col-md-12">{{promotion.description}}</p>
            </div>
        </div>
    </div>
</div>

<script src="../javascripts/promotion.js"></script>
