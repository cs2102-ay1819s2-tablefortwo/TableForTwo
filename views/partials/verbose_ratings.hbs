<table class="table table-striped col-md-8 justify-content-center ">
    <thead>
        <tr>
            <th scope="col">Rating</th>
            <th scope="col">Comments</th>
            <th scope="col">Customer ID</th>
        </tr>
    </thead>
    <tbody>
        {{#each allRatings }}
        <tr>
            <td>{{ this.rating }}</td>
            <td>{{ this.comments }}</td>
            <td>{{ this.customer_id }}</td>
        </tr>
        {{/each}}
    </tbody>
</table>